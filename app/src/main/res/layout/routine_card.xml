<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="30dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="30dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_gradient"
            >
            <TextView
                android:id="@+id/routine_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Routine Title"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/gothic"
                android:textSize="20sp"
                android:layout_margin="20dp"
                />
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@id/routine_more"
                >
                <TextView
                    android:id="@+id/routine_start_time"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="10:00 am"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:fontFamily="@font/gothic"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="to"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:fontFamily="@font/gothic"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/routine_end_time"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="10:00 pm"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:fontFamily="@font/gothic"
                    android:gravity="center"
                    />
            </LinearLayout>
            <ImageButton
                android:id="@+id/routine_more"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_more_vert_white_24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                />
            <GridLayout
                android:id="@+id/goal_grid_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/routine_title"
                android:layout_margin="20dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>